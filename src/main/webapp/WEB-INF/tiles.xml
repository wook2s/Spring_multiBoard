<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
  <definition name="board.*" template="/WEB-INF/views/include/layout.jsp">
    <put-attribute name="title"  value="homepage" />
    <put-attribute name="header" value="/WEB-INF/views/include/header.jsp" />
    <put-attribute name="search"  value="/WEB-INF/views/include/search.jsp" />
    <put-attribute name="aside"  value="/WEB-INF/views/include/aside.jsp" />
    <put-attribute name="body"   value="/WEB-INF/views/board/{1}.jsp" />
    <put-attribute name="footer" value="/WEB-INF/views/include/footer.jsp" />
  </definition>
  
  <definition name="member.*" template="/WEB-INF/views/include/layout2.jsp">
    <put-attribute name="title"  value="Tiles tutorial homepage" />
    <put-attribute name="header" value="/WEB-INF/views/include/header.jsp" />
    <put-attribute name="search"  value="/WEB-INF/views/include/search.jsp" />
    <!-- <put-attribute name="aside"  value="/WEB-INF/views/include/aside.jsp" /> -->
    <put-attribute name="body"   value="/WEB-INF/views/member/{1}.jsp" />
    <put-attribute name="footer" value="/WEB-INF/views/include/footer.jsp" />
  </definition>
</tiles-definitions>